{
  "name": "homepage",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rimraf dist/",
    "build:ts": "tsc",
    "copy": "copyfiles -u 1 public/**/* public/** dist/",
    "build": "npm-run-all clean build:ts copy",
    "dev": "nodemon --watch public --watch src --ext ts,json,css,html --exec \"npm run build\""
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
